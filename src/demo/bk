import React from 'react';
import { Button, Modal } from '../lib';
import './demo.scss';
export class ModalDemo extends React.Component {
    constructor(props) {
        super(props);
        this.child = React.createRef();
    }

    closeModal() {
        this.child.current.close();
    }

    showModal() {
        this.child.current.open();
    }

    render() {
        return(
            <div>
                <div>
                    <h1>Modal Demo</h1>
                    <Button type="raised" color="primary" onClick={() => this.showModal()} >Open</Button>
                    <Modal 
                        width="300px" 
                        height="200px" 
                        ref={this.child} >
                            <Modal.Header>Test Me</Modal.Header>
                            <Modal.Body>
                                Some Body Content
                            </Modal.Body>
                            <Modal.Actions>
                                <React.Fragment>
                                    <Button type="raised" color="primary" onClick={() => this.closeModal()} >Close</Button>
                                </React.Fragment>
                            </Modal.Actions>
                    </Modal>
                </div>
            </div>
        );
    }
}